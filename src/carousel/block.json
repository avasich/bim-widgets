{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "bim-widgets/bim-page-carousel",
  "title": "Bim Carousel",
  "category": "widgets",
  "icon": "screenoptions",
  "version": "0.1",
  "selectors": {
    "root": ".bim-carousel"
  },
  "attributes": {
    "items": {
      "type": "array",
      "default": [
        {
          "imageId": null,
          "text": "",
          "url": ""
        }
      ]
    },
    "imageSettings": {
      "type": "object",
      "default": {
        "width": 120,
        "height": 120,
        "borderRadius": 50
      }
    },
    "carouselSettings": {
      "type": "object",
      "default": {
        "rows": 2,
        "gaps": 30,
        "maxCols": 4
      }
    }
  },
  "supports": {
    "align": true
  },
  "editorStyle": "file:./index.css",
  "editorScript": "file:./index.js",
  "render": "file:./render.php"
}
